---
interface Props {
  title?: string;
}

const { title = 'quint-code' } = Astro.props;
---

<div
  class="overflow-hidden rounded-lg border border-border-subtle bg-bg-secondary"
>
  <div
    class="flex items-center gap-2 border-b border-border-subtle bg-bg-tertiary px-4 py-3"
  >
    <div class="h-3 w-3 rounded-full bg-red-500"></div>
    <div class="h-3 w-3 rounded-full bg-yellow-500"></div>
    <div class="h-3 w-3 rounded-full bg-green-500"></div>
    <span class="ml-2 text-xs text-text-muted">{title}</span>
  </div>
  <div class="p-4 font-mono text-sm leading-relaxed">
    <slot />
  </div>
</div>

<style>
  .terminal-prompt::before {
    content: '$ ';
    color: #22c55e;
  }
</style>
